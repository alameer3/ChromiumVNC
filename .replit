modules = ["nodejs-20", "web", "python-3.11", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium", "freetype", "geckodriver", "glib", "imagemagick", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "nss", "openjpeg", "tcl", "tk", "x11vnc", "xorg.libxcb", "xorg.xorgserver", "xorg.xvfb", "xorg.xwd", "xvfb-run", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Chromium"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Enhanced"

[[workflows.workflow]]
name = "VNC Chromium"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python vnc_launcher.py"
waitForPort = 5000

[[workflows.workflow]]
name = "VNC Enhanced"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python fixed_vnc_launcher.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6080
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 9222
externalPort = 5173
exposeLocalhost = true
