modules = ["nodejs-20", "python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium", "freetype", "geckodriver", "glib", "imagemagick", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "nss", "openjpeg", "tcl", "tk", "x11vnc", "xorg.libxcb", "xorg.xorgserver", "xorg.xvfb", "xorg.xwd", "xvfb-run", "zlib", "firefox"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Firefox VNC"

[[workflows.workflow]]
name = "Firefox VNC"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'export DISPLAY=:1; Xvfb :1 -screen 0 1920x1080x24 -ac & sleep 3; x11vnc -display :1 -forever -nopw -listen 127.0.0.1 -rfbport 5900 -shared & sleep 2; firefox --new-instance \"https://www.google.com\" & sleep 3; python -m websockify --web . 6080 127.0.0.1:5900 & python3 -m http.server 5000'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6080
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 9222
externalPort = 5173
exposeLocalhost = true
