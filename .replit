modules = ["python-3.11", "nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium", "geckodriver", "glib", "nss", "x11vnc", "xorg.libxcb", "xorg.xvfb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Chromium Browser"

[[workflows.workflow]]
name = "Web Chromium Browser"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install websockets selenium psutil && python main.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 9222
externalPort = 5173
exposeLocalhost = true
